%section.panel.radius.plot
  %h3.subheader "Interaction chart - #{params["output"]} - #{params["param_x"]} vs #{params["param_y"]}
  .row
  %span.button.hide= 'Hide chart'
  %br
    .chart

:javascript
  $(function() {
    var div_id = "#interaction_chart_#{params['chart_id']}";
    $("span.button.hide").on('click', function() {
      $(div_id).remove();
    });
  });

