%section.panel.radius.plot
%h3.subheader
  = "Interaction chart - " + output + " - " + param1 + " vs. " + param2
  .row
%button= 'Hide chart'
%br
  .chart

- content_for :javascript do
:javascript
  $(function() {
    var div_id = "#interaction_chart_#{chart_id}";
    $(div_id + " .button").on('click', function() {
      $(div_id).remove();
    });
  });
