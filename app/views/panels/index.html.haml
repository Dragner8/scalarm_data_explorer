%ul{id: "searchList"}
  %dl.accordion{"data-accordion" => ""}
    %dd.accordion-navigation
      - @groups.each do | group_id, group| # na razie groupid na stale i tak trzeba zmienic strukture
        %a{href: "#"+group["name"], style:"padding:0px;" "text-align: left;", id:group_id}
          = group["name"]
          #content{id:group_id, style:"padding-bottom:10px;"  }
            %dl.row{style: "text-align: left;"}
              - group["methods"].each do |method| 
                %li.small-9.columns.small-centered{id:method["name"], style:"padding-bottom: 0px;" "padding-right: 0px;"}
                  - if method["em_class"]
                    - image_id = method["name"].gsub(/\s+/, "")
                    -# "title"=>"<table><tr><td>#{method["description"]} </td><td><img src=#{method["image"]} /></td></tr></table> "
                    %a.tip-right.text-left{href: "#", "em-class" => method["em_class"], "title"=>"<table style=background-color:blue;><tr><td>#{method["description"]} </td><td><img src=#{method["image"]} /></td></tr></table> ", "data-reveal-id"=> method["id"], "data-tooltip" =>"", style:"padding: 0px;"}

                    -#%a.tip-right.text-left{href: "#", "em-class" => method["em_class"], "title"=>"#{method["description"]} <img src=#{method["image"]} />", "data-reveal-id"=> method["id"], "data-tooltip" =>"", style:"padding: 0px;"}
                      %span{style: "padding: 0;"}= method["name"]
                  - else
                    - image_id = method["name"].gsub(/\s+/, "")
                    %a.tip-right.text-left{href:"#method"+method["name"], "title"=>"<table><tr><td>#{method["description"]} </td><td><img src=#{@prefix}#{method["image"]} /></td></tr></table> ", "data-reveal-id"=>method["id"], "data-tooltip"=>"", style:"padding: 0px;"}
                      %span= method["name"]





- @methods.each do |method|
  = render "/../visualisation_methods/#{method}/modal"

:javascript
  $(function(){
    $(document).foundation();

  $("#searchList [data-reveal-id=experiment-analysis-modal]").on("click", function(event){
    var modalIdName = $(event.currentTarget).attr('data-reveal-id');
    var className = $(event.currentTarget).attr('em-class');

    $("#" + modalIdName + " .content").hide();
    $("#" + modalIdName + " ." + className + "-content").show();
    });

  $("#searchList").find("#basic").bind("click", function() {
      if (!$("#content_basic").is(":visible"))
        $("#content_basic").show();
      else
        $("#content_basic").hide();
    });

  $("#searchList").find("#params").bind("click", function() {
      $('#params').foundation('tooltips', 'generate', '<img src="http://..../.jpg" />');
      if (!$("#content_params").is(":visible"))
        $("#content_params").show();
      else
        $("#content_params").hide();
    });






  });
